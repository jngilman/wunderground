<div class="container">
	
	<%= render 'form' %>
</div>

<div class="row">
	<div class="col s12 m6">
		<div class="card">
			<div class="card-content">
				
				<p><span class="card-title">Forecast <%= @location %></span></p>
				<p class="right"><%= image_tag @weather_icon %></p>
				<p>Temp: <%= @temp_f %>°F</p>
				<p>Feels like: <%= @feels_like %>°F</p>
				<p><%= @weather_words %></p>
			</div>
			<div class="card-action">
				<%= link_to "full forecast", @forecast_link, target: "_blank" %>
			</div>
		</div>


	</div>

</div>

